# .gitconfig

[user]
  name = PastaMasta
  email = pasta.masta2902@gmail.com

[core]
  excludesfile = ~/.gitignore
  pager = diffr | less -R

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[credential]
  helper = cache

[alias]
  yeet = push
  kermit = commit
  undo = reset --soft HEAD~1
  vimdiff = difftool
  open = !"bash -c '. $HOME/.bashbag/git ; git_open_repo_in_browser '"$1" "

[interactive]
  diffFilter = diffr

[diff]
  tool = vimdiff
[difftool]
  prompt = false

[pull]
  rebase = true
[push]
  autoSetupRemote = true

